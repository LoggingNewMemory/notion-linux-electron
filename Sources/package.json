{
  "main": "main.js",
  "name": "notion-electron-linux",
  "version": "1.0.0",
  "description": "Unofficial Notion desktop client for Linux. Made With Electron",
  "author": "Kanagawa Yamada <yamadakernel.project@gmail.com>",
  "homepage": "https://github.com/LoggingNewMemory",
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux"
  },
  "build": {
    "appId": "com.kanagawa.yamada.notion.electron",
    "productName": "Notion",
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "logo/notion.png"
    }
  }
}
